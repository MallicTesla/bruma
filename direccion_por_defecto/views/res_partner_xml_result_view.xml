<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_dgi_xml" model="ir.ui.view">
        <field name="name">res.partner.form.dgi.xml</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
        <xpath expr="//page[@name='sales_purchases']" position="after">
            <page string="Datos DGI">
            <group>
                <field name="xml_result" readonly="1" widget="text"
                    placeholder="Aquí verás el XML completo…"/>
            </group>
            </page>
        </xpath>
        </field>
    </record>
</odoo>
